<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="codehub.suguniben.F_BUY_AND_SELL">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/single_sendCommentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/black_overlay"
            android:foregroundGravity="bottom"
            android:gravity="bottom"
            android:paddingLeft="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/buy_sell_search_name"
                    android:layout_width="293dp"
                    android:layout_height="match_parent"
                    android:background="?android:selectableItemBackgroundBorderless"
                    android:hint="Search:"
                    android:inputType="text"
                    android:maxLength="290"
                    android:maxLines="1"
                    android:maxWidth="260dp"
                    android:padding="5dp"
                    android:textSize="12sp"
                    tools:ignore="NewApi" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/buy_sell_search"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="?android:selectableItemBackground"
                    android:src="@mipmap/search_icon"
                    tools:ignore="NewApi" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:elevation="10dp"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageButton
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:background="@android:color/transparent"
                                    android:maxHeight="50dp"
                                    android:padding="10dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/money" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/sell_main_garget"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="?android:selectableItemBackground"
                                android:padding="5dp"
                                android:text="Do you want too  sale your Gadget and Accessories ?" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/sell_RecylerVieww"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>


    </LinearLayout>
</FrameLayout>
