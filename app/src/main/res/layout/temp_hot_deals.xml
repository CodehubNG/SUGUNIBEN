<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/whiet"
    android:orientation="vertical">

    <TextView
        android:id="@+id/hot_deals_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="16"
        android:padding="5dp"
        android:text=""
        android:textSize="12sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/hot_deals_image"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:background="@android:color/holo_red_light"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/hot_deals_old_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textColor="@color/light_red"
            android:textSize="11sp"
            android:textStyle="bold"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/hot_deals_new_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:maxLength="11"
            android:padding="5dp"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            tools:ignore="RelativeOverlap" />
    </RelativeLayout>


    <Button
        android:id="@+id/hot_deals_buy_now"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="?android:selectableItemBackground"
        android:foreground="?android:attr/windowBackground"
        android:text="@string/buy_now"
        android:textSize="11sp"
        tools:ignore="SmallSp" />
</LinearLayout>



