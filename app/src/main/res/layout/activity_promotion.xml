<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiet"
    android:padding="20dp"
    tools:context="codehub.suguniben.Promotion">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/sell_promotion_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="?android:selectableItemBackground"
                android:hint="ID"
                android:inputType="number"
                android:maxLength="1"
                android:padding="10dp"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/sell_promotion_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="?android:selectableItemBackground"
                android:hint="Product Name"
                android:padding="10dp"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/sell_promotion_old_prices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="?android:selectableItemBackground"
                android:hint="Old Price"
                android:inputType="number"
                android:padding="10dp"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/sell_promotion_new_prices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="?android:selectableItemBackground"
                android:hint="New Prices"
                android:padding="10dp"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/sell_promotion_desciption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="?android:selectableItemBackground"
                android:hint="Product Description"
                android:inputType="textMultiLine"
                android:maxLines="7"
                android:padding="10dp"
                android:textSize="12sp" />

            <ImageButton
                android:id="@+id/sell_promotion_image"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/add_image" />

            <Button
                android:id="@+id/sell_promotion_upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:selectableItemBackground"

                android:text="DONE" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
